@model AlphaFleet.Models.Fleet

<div class="card mb-4">
    <div class="card-header text-white" style="background-color: #1a237e;">
        <h5 class="mb-0">
            @Model.Name
            <span class="badge bg-secondary float-end">@Model.Ships.Count ships</span>
        </h5>
        <small class="text-light">üìç @Model.Location</small>
    </div>
    <div class="card-body">
        @if (Model.Ships == null || Model.Ships.Count == 0)
        {
            <p class="text-muted">No ships in this fleet.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Class</th>
                            <th>Hull Class</th>
                            <th>Rarity</th>
                            <th>Production Year</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ship in Model.Ships)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(ship.ImageUrl))
                                    {
                                        <img src="@ship.ImageUrl" alt="@ship.Name" style="width: 30px; height: 30px; margin-right: 10px; border-radius: 3px;" />
                                    }
                                    <strong>@ship.Name</strong>
                                </td>
                                <td>@ship.Class</td>
                                <td>@ship.ShipHullClass</td>
                                <td>
                                    <span class="badge bg-@GetRarityColor(ship.Rarity)">
                                        @ship.Rarity
                                    </span>
                                </td>
                                <td>@ship.ShipProductionYear</td>
                                <td>
                                    @if (ship.IsAvailable)
                                    {
                                        <span class="badge bg-success">Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Unavailable</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@functions {
    private string GetRarityColor(AlphaFleet.Models.Enums.ShipRarity rarity)
    {
        return rarity switch
        {
            AlphaFleet.Models.Enums.ShipRarity.Common => "secondary",
            AlphaFleet.Models.Enums.ShipRarity.Rare => "info",
            AlphaFleet.Models.Enums.ShipRarity.Epic => "warning",
            AlphaFleet.Models.Enums.ShipRarity.Legendary => "danger",
            _ => "dark"
        };
    }
}
