@model IEnumerable<AlphaFleet.Data.Models.Fleet>

<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        Fleets
    </a>
    <ul class="dropdown-menu">
        <li><a class="dropdown-item" asp-controller="Fleet" asp-action="Index">All Fleets</a></li>
        <li><hr class="dropdown-divider" /></li>
        <li><h6 class="dropdown-header">Quick Access</h6></li>
        @foreach (var fleet in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="Fleet" asp-action="Details" asp-route-id="@fleet.Id">
                    @fleet.Name
                    <span class="badge bg-secondary ms-1">@fleet.Ships.Count</span>
                </a>
            </li>
        }
    </ul>
</li>
