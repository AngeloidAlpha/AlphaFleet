@model AlphaFleet.Data.Models.Ship

@{
    ViewData["Title"] = "Delete Ship";
}

<div class="container mt-5">
    <h1 class="mb-4 text-danger">‚ö†Ô∏è @ViewData["Title"]</h1>

    <div class="alert alert-danger">
        Are you sure you want to permanently delete this ship? This action cannot be undone.
    </div>

    <div class="card">
        <div class="row g-0">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="col-md-4 d-flex align-items-center justify-content-center p-3">
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-height: 250px;" />
                </div>
            }
            <div class="col-md-@(string.IsNullOrEmpty(Model.ImageUrl) ? "12" : "8")">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8"><strong>@Model.Name</strong></dd>

                        <dt class="col-sm-4">Class</dt>
                        <dd class="col-sm-8">@Model.Class</dd>

                        <dt class="col-sm-4">Hull Class</dt>
                        <dd class="col-sm-8">@Model.ShipHullClass</dd>

                        <dt class="col-sm-4">Rarity</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@GetRarityColor(Model.Rarity)">@Model.Rarity</span>
                        </dd>

                        <dt class="col-sm-4">Production Year</dt>
                        <dd class="col-sm-8">@Model.ShipProductionYear</dd>

                        <dt class="col-sm-4">Fleet</dt>
                        <dd class="col-sm-8">@Model.Fleet.Name</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsAvailable)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Unavailable</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex gap-2 mt-3">
        <form asp-controller="Ship" asp-action="Delete" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-danger">üóëÔ∏è Confirm Delete</button>
        </form>
        <a asp-controller="Ship" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
    </div>
</div>

@functions {
    private string GetRarityColor(AlphaFleet.Data.Models.Enums.ShipRarity rarity)
    {
        return rarity switch
        {
            AlphaFleet.Data.Models.Enums.ShipRarity.Common => "secondary",
            AlphaFleet.Data.Models.Enums.ShipRarity.Rare => "info",
            AlphaFleet.Data.Models.Enums.ShipRarity.Epic => "warning",
            AlphaFleet.Data.Models.Enums.ShipRarity.Legendary => "danger",
            _ => "dark"
        };
    }
}
