@model IEnumerable<AlphaFleet.Models.Ship>

@{
    ViewData["Title"] = "Ships";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No ships found.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Class</th>
                        <th>Rarity</th>
                        <th>Hull Class</th>
                        <th>Production Year</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ship in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(ship.ImageUrl))
                                {
                                    <img src="@ship.ImageUrl" alt="@ship.Name" style="width: 40px; height: 40px; border-radius: 5px;" />
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                            <td>
                                <a asp-controller="Ship" asp-action="Details" asp-route-id="@ship.Id">
                                    <strong>@ship.Name</strong>
                                </a>
                            </td>
                            <td>@ship.Class</td>
                            <td>
                                <span class="badge bg-@GetRarityColor(ship.Rarity)">
                                    @ship.Rarity
                                </span>
                            </td>
                            <td>@ship.ShipHullClass</td>
                            <td>@ship.ShipProductionYear</td>
                            <td>
                                @if (ship.IsAvailable)
                                {
                                    <span class="badge bg-success">Available</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Unavailable</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@functions {
    private string GetRarityColor(AlphaFleet.Models.Enums.ShipRarity rarity)
    {
        return rarity switch
        {
            AlphaFleet.Models.Enums.ShipRarity.Common => "secondary",
            AlphaFleet.Models.Enums.ShipRarity.Rare => "info",
            AlphaFleet.Models.Enums.ShipRarity.Epic => "warning",
            AlphaFleet.Models.Enums.ShipRarity.Legendary => "danger",
            _ => "dark"
        };
    }
}
