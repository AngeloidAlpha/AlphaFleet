@model IEnumerable<AlphaFleet.Data.Models.Ship>

@{
    ViewData["Title"] = "Ships";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">@ViewData["Title"]</h1>
        <a asp-controller="Ship" asp-action="Create" class="btn btn-primary">🚀 Add Ship</a>
    </div>

    <form asp-controller="Ship" asp-action="Index" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Search by name or class..."
                   value="@ViewData["CurrentSearch"]" />
            <button type="submit" class="btn btn-primary">🔍 Search</button>
            @if (!string.IsNullOrEmpty(ViewData["CurrentSearch"]?.ToString()))
            {
                <a asp-controller="Ship" asp-action="Index" class="btn btn-outline-secondary">✕ Clear</a>
            }
        </div>
    </form>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            @if (!string.IsNullOrEmpty(ViewData["CurrentSearch"]?.ToString()))
            {
                <span>No ships found matching "<strong>@ViewData["CurrentSearch"]</strong>".</span>
            }
            else
            {
                <span>No ships found.</span>
            }
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Class</th>
                        <th>Hull Class</th>
                        <th>Rarity</th>
                        <th>Production Year</th>
                        <th>Fleet</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ship in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(ship.ImageUrl))
                                {
                                    <img src="@ship.ImageUrl" alt="@ship.Name" style="width: 40px; height: 40px; border-radius: 5px;" />
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                            <td>
                                <a asp-controller="Ship" asp-action="Details" asp-route-id="@ship.Id">
                                    <strong>@ship.Name</strong>
                                </a>
                            </td>
                            <td>@ship.Class</td>
                            <td>@ship.ShipHullClass</td>
                            <td>
                                <span class="badge bg-@GetRarityColor(ship.Rarity)">
                                    @ship.Rarity
                                </span>
                            </td>
                            <td>@ship.ShipProductionYear</td>
                            <td>
                                <a asp-controller="Fleet" asp-action="Details" asp-route-id="@ship.FleetId">
                                    @ship.Fleet.Name
                                </a>
                            </td>
                            <td>
                                @if (ship.IsAvailable)
                                {
                                    <span class="badge bg-success">Available</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Unavailable</span>
                                }
                            </td>
                            <td>
                                <a asp-controller="Ship" asp-action="Edit" asp-route-id="@ship.Id" class="btn btn-sm btn-outline-primary">✏️</a>
                                <a asp-controller="Ship" asp-action="Delete" asp-route-id="@ship.Id" class="btn btn-sm btn-outline-danger">🗑️</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@functions {
    private string GetRarityColor(AlphaFleet.Data.Models.Enums.ShipRarity rarity)
    {
        return rarity switch
        {
            AlphaFleet.Data.Models.Enums.ShipRarity.Common => "secondary",
            AlphaFleet.Data.Models.Enums.ShipRarity.Rare => "info",
            AlphaFleet.Data.Models.Enums.ShipRarity.Epic => "warning",
            AlphaFleet.Data.Models.Enums.ShipRarity.Legendary => "danger",
            _ => "dark"
        };
    }
}
